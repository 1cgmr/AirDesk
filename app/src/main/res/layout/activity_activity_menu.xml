
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="pt.ulisboa.tecnico.cmov.airdesk.Activity_Menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textViewUserEmail"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnOwnedWorkspaces"
            android:layout_width="100pt"
            android:layout_height="30pt"
            android:textStyle="bold"
            android:text="Owned Workspaces"
            android:layout_gravity="center_horizontal"
            />


        <Button
            android:id="@+id/btnForeignWorkspaces"
            android:layout_width="100pt"
            android:layout_height="30pt"
            android:textStyle="bold"
            android:text="Foreign Workspaces"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnNewWorkspaces"
            android:layout_width="100pt"
            android:layout_height="30pt"
            android:textStyle="bold"
            android:text="New Workspaces"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btnListTags"
            android:layout_width="100pt"
            android:layout_height="30pt"
            android:textStyle="bold"
            android:text="Lista de Tags"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
